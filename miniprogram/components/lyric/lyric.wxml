<scroll-view hidden="{{isLyricShow}}" class="lyric-scroll" scroll-y scroll-top="{{scrollTop}}" scroll-with-animation="true">
  <view class="lyric-panel">
    <block wx:for="{{lyricList}}" wx:key="item">
      <view class="lyric {{index==plyricIndex?'hightlight-lyric': ''}}">{{item.lineLyric}}</view>
    </block>
  </view>
</scroll-view>
